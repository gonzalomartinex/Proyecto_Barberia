/* Correcciones para filtros en móviles */

/* Asegurar que los select se mantengan dentro de la pantalla */
.form-select {
    max-width: 100%;
    overflow: hidden;
}

/* Específico para móviles - forzar comportamiento nativo mejorado */
@media (max-width: 768px) {
    .form-select {
        /* Forzar que el dropdown se abra hacia arriba si no hay espacio */
        position: relative;
        z-index: 1000;
    }
    
    /* Asegurar que los campos date/time no se salgan de pantalla */
    input[type="date"],
    input[type="time"] {
        max-width: 100%;
        /* En móviles, usar el picker nativo del sistema */
        -webkit-appearance: none;
        -moz-appearance: none;
        appearance: none;
        position: relative;
        z-index: 999;
    }
    
    /* Restaurar la apariencia nativa en móviles para mejor UX */
    input[type="date"]::-webkit-calendar-picker-indicator,
    input[type="time"]::-webkit-calendar-picker-indicator {
        background: transparent;
        bottom: 0;
        color: transparent;
        cursor: pointer;
        height: auto;
        left: 0;
        position: absolute;
        right: 0;
        top: 0;
        width: auto;
        opacity: 1;
    }
    
    /* Forzar que el modal de date/time se centre en la pantalla */
    input[type="date"]:focus,
    input[type="time"]:focus {
        transform: none;
        position: relative;
    }
}

/* Solución específica para select en iOS/Android */
@media (max-width: 768px) {
    select {
        /* Forzar el uso del selector nativo en móviles */
        -webkit-appearance: menulist;
        -moz-appearance: menulist;
        appearance: menulist;
        background: var(--form-bg);
        border: 1px solid var(--border-color);
        border-radius: 0.375rem;
        padding: 0.375rem 2rem 0.375rem 0.75rem;
        font-size: 1rem;
        line-height: 1.5;
        color: var(--text-primary);
    }
    
    /* Asegurar que el dropdown nativo se vea bien */
    select:focus {
        border-color: var(--accent-color);
        outline: 0;
        box-shadow: 0 0 0 0.25rem rgba(255, 215, 0, 0.25);
    }
}

/* Corrección adicional para contenedores de filtros */
.filter-card {
    position: relative;
    overflow: visible;
    z-index: 10;
}

.filter-card .card-body {
    position: relative;
    z-index: 11;
}

/* Asegurar que los filtros no se corten */
@media (max-width: 576px) {
    .col-12.col-md-6.col-lg-3 {
        margin-bottom: 1rem;
        position: relative;
        z-index: auto;
    }
    
    /* Dar más espacio vertical entre filtros */
    .row.g-3 {
        gap: 1rem;
    }
    
    /* Asegurar que los labels sean visibles */
    .form-label {
        font-weight: 600;
        margin-bottom: 0.5rem;
        display: block;
        color: var(--text-primary);
    }
}

